@model UserProfileNotificationsViewModel

<form class="form-horizontal" method="post" action="@Url.Action("ProfilePreferences")">
  <div class="form-group">
    <div class="col-md-4 col-md-offset-2">
      <div class="checkbox">
        <label>
          @Html.CheckBoxFor(m => m.ReceiveEmailNotifications)
          @Resources.Account.Profile.ReceiveProjectNotifications
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-md-2">@Resources.Account.Profile.PreferredLocale</label>
    <div class="col-sm-4 col-md-3 col-lg-2">
      @Html.DropDownListFor(m => m.PreferredLocale, Model.LocaleOptions, new { @class = "form-control" })
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-4 col-md-offset-2">
      <button class="btn btn-primary">@Resources.Shared.Save</button>
    </div>
  </div>
</form>

